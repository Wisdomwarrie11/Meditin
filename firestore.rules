
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User profiles
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Practice Sessions
    match /practiceSessions/{sessionId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn();
      // SECURITY: Users cannot update 'paid' or 'status' fields. 
      // Only an Admin (Cloud Function) can perform these updates.
      allow update: if isAdmin() || (
        isSignedIn() && 
        resource.data.userId == request.auth.uid && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['paid', 'status', 'planId'])
      );
    }

    // Performance Scores
    match /performanceScores/{scoreId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn();
    }
  }
}
