
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User profiles
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Medical Fields & Categories
    match /medicalFields/{fieldId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /examCategories/{catId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Practice Sessions
    match /practiceSessions/{sessionId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn();
      allow update: if isAdmin();
    }

    // Payments - Verified by Cloud Functions
    match /payments/{paymentId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if false; // Only Cloud Functions should update payment statuses
    }

    // Exam Questions - Highly sensitive
    match /exams/{examId} {
      allow read: if isSignedIn(); // Add more complex check for active paid session if needed
      allow write: if isAdmin();
    }

    // Feedback
    match /feedback/{feedbackId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if false; // Created via backend after exam completion
    }
  }
}
